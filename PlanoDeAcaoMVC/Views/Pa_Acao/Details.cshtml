            </tr>

            <tr>
                <td>
                    @Html.Raw(ResourcesPA.Resource.as_important_points)
                </td>
                <td>
                    @Html.DisplayFor(model => model.ComoPontosimportantes)
                </td>
                <td></td>
            </tr>

            <tr>
                <td>
                    @Html.Raw(ResourcesPA.Resource.status)
                </td>
                <td>
                    @Html.DisplayFor(model => model._StatusName)
                </td>
                <td></td>
            </tr>

            <tr>
                <td>
                    @Html.Raw(ResourcesPA.Resource.term)
                </td>
                <td>
                    @Html.DisplayFor(model => model._Prazo)
                </td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>
