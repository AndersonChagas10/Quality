@model Dominio.ParGoalScorecard

@{
    ViewBag.Title = "ScorecardConfig";
}

<h2>ScorecardConfig</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>ParGoalScorecard</h4>
        <hr />

        <div class="form-group">
            @Html.Label("Valores Atuais:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="col-md-2">
                    Superior: @ViewBag.PercentValueMid
                </div>
                <div class="col-md-6">
                    Inferior: @ViewBag.PercentValueHigh
                </div>
            </div>
            <hr />

            <div class="form-group">
                @Html.Label("Data", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InitDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.InitDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Valor Limite 1", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PercentValueMid, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PercentValueMid, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Valor Limite 2", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PercentValueHigh, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PercentValueHigh, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

