@{
    var leve2Number = 0;
    if (ViewBag.level2Number != null)
    {
        leve2Number = ViewBag.level2Number;
    }
}

<tr class="rowTabelaFamilia" id="monCorpAtivo">
    <td class="colTabelaFamilia">
        @Html.Label("Monitoramentos Corporativos Ativos:")
    </td>
    <td class="colTabelaFamilia" align="center">
        @Html.DropDownList("level2", new SelectList(ViewBag.ParLevel2Todos, "Id", "Name"), Resources.Resource.select + "...", new { @class = "form-control select2", style = "width: 100%", @multiple = "multiple" })
    </td>
</tr>

<tr class="rowTabelaFamilia" id="numeroFamilias">
    <td class="colTabelaFamilia">
        @Html.Label("Numero de monitoramentos não corporativos:")
    </td>
    <td class="colTabelaFamilia" align="center">
        @Html.TextBox("level2Number", leve2Number, new { @class = "form-control" })
    </td>
</tr>


<script>

    var level2Selected = @Html.Raw(Json.Encode(ViewBag.ParLevel2Ids));

    $('#level2Number').inputmask('integer', { rightAlign: false });

    $(document).ready(function () {
        $('#level2').select2({ allowClear: true, placeholder: "" })
        if(level2Selected != null)
            $('#level2').val(level2Selected).change();
    });

</script>
