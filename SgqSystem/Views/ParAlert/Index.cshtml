@model IEnumerable<Dominio.ParAlert>

@{
    ViewBag.Title = Resources.Resource.alert;
}



<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Resources.Resource.alert</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.alert</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="setup_tab">

                                <p>
                                    @Html.ActionLink(Resources.Resource.create as string, "Create", null, new { @class = "btn btn-primary" })
                                </p>
                                <table class="table" id="tabelaModuloProcesso">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Resources.Resource.name
                                            </th>
                                            <th>
                                                @Resources.Resource.alert @Resources.Resource.type
                                            </th>
                                            <th>
                                                @Resources.Resource.department
                                            </th>
                                            <th>
                                                @Resources.Resource.level2
                                            </th>
                                            <th>
                                                @Resources.Resource.level3
                                            </th>
                                            <th>
                                                @Resources.Resource.level3
                                            </th>
                                            <th>
                                                @Resources.Resource.active
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ParAlertType.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ParDepartment.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ParLevel1.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ParLevel2.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ParLevel3.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IsActive)
                                                </td>
                                                <td>
                                                    @Html.ActionLink(Resources.Resource.edit as string, "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

<script>
     $(document).ready(function () {
         closeLeftSidebar();
         DataTableComResourcesEpropriedadesjaSetadas.aoColumns = [
             null,
             null,
             null,
             null,
             null,
             null,
             null,
             { "bSearchable": false }
         ];
         $('#tabelaModuloProcesso').dataTable(DataTableComResourcesEpropriedadesjaSetadas);
    });

</script>