@model  ICollection<Dominio.ParDepartment>


@{
    ViewBag.Title = "Filhos";
}

<div class="portlet light bordered">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="icon-share font-dark"></i>
            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.department</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="tab-content">
            <div class="tab-pane active" id="setup_tab">

                @*<p>
                    @Html.ActionLink(Resources.Resource.create as string, "Create", "ParDepartmentsRH", new { parCompanyId = ViewBag.ParCompanyId }, new { @class = "btn btn-primary" })
                </p>*@

                <table class="table" id="tabelaDepartamentos">
                    <thead style="background-color: cornflowerblue;">
                        <tr>
                            <th>
                                @Resources.Resource.department
                            </th>
                            <th>
                                @Resources.Resource.description
                            </th>
                            <th>
                                @Resources.Resource.linked
                            </th>
                            <th>
                                @Resources.Resource.is_active
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @*@Html.DisplayFor(modelItem => item.Name)*@
                                    @(item.Hash != null ? item.Hash + "/" : "")  @item.Id - @item.Name
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ParDepartmentPai.Name)
                                </td>
                                <td>
                                    @*@Html.Raw(item.Active ? Resources.Resource.yes : Resources.Resource.no)*@
                                    @Html.DisplayFor(modelItem => item.Active)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");
    navbarSelect("navbar4");

</script>

<script>
    $(document).ready(function () {
        closeLeftSidebar();

        DataTableComResourcesEpropriedadesjaSetadas.aoColumns = [
            null,
            null,
            null,
            { "bSearchable": false }
        ];
        $('#tabelaDepartamentos').dataTable(DataTableComResourcesEpropriedadesjaSetadas);
    });
</script>