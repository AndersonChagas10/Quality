            $.post(url1, enviar, function (r) {
                try {
                    var resultSet = r.Retorno.ConsolidationLevel01
                    CreateChart(resultSet);
                } catch (e) {
                    console.log(e);
                } finally {
                    $btn.button('reset');
                    //Hotfix: table não alinha resultados de centro no meio da tr....
                   
                }
            });
        };

