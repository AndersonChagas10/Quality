        $('#simpleCallendar').hide().attr('disabled', true);

        $(document).ready(function () {
            $("#btnSend").click(function (e) {
                Send();
            });
        });

        function Send() {
            $btn.button('loading');
            $('#results').empty();
            ValidaDadosParaEnvio();
