@model IEnumerable<SgqSystem.Controllers.Recravacao.ParRecravacao_Linhas>

@{
    ViewBag.Title = "Index";
}

<div class="page-content-wrapper">
    <div class="page-content" style="min-height: 600px;">
        <br />
        <h1 class="page-title">
            Recravação
            <small>Listagem de Tipos de Linhas</small>
        </h1>
        <!-- END PAGE TITLE-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@ViewBag.urlHome">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span> Recravação </span>
                </li>
            </ul>
            <div class="page-toolbar">
            </div>
        </div>
        <div>
            <p>
                @Html.ActionLink("Nova Linha", "Create")
            </p>
            <table class="table table-striped dataTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ParCompany_Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ParRecravacao_TypeLata_Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumberOfHeads)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Description)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParCompany.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TipoLata.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NumberOfHeads)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Detalhes", "Details", new { id = item.Id })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $(".sidebar-toggler").removeClass("hide");
        $(".page-sidebar-wrapper").removeClass("hide");
        navbarSelect("navbar7");

        $('table').DataTable({
            "language": {
                "sProcessing": "A processar...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "Não foram encontrados resultados",
                "sInfo": "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando de 0 até 0 de 0 registros",
                "sInfoFiltered": "(filtrado de _MAX_ registros no total)",
                "sInfoPostFix": "",
                "sSearch": "Procurar:",
                "sUrl": "",
                "oPaginate": {
                    "sFirst": "Primeiro",
                    "sPrevious": "Anterior",
                    "sNext": "Seguinte",
                    "sLast": "Último"
                }
            }
        });
    });
</script>
