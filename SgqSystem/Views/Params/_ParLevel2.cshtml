        if (includeItem == true) {
            var indexValue = $('.counterRegraReincidenciaClass').length;

            var inputHidden = '<input class="counterRegraReincidenciaClass" type="hidden" name="paramsDto.listParRelapseDto[' + indexValue + '].NcNumber" value="' + NcNumber + '" />' +
