        var includeItem = true;

        inputs.each(function (e) {

            if ($(this).val() == input.val()) {
                alert('Já cadastrou esse grupo para o input');
                includeItem = false;
                return false;
            }

        });
        if (includeItem == true) {
            var indexValue = $('.groupLevel03Class').length;

            var inputHidden = '<input class="groupLevel03Class" type="hidden" name="paramsDto.listParLevel3GroupDto[' + indexValue + '].Name" value="' + input.val() + '" />'
            var elemento = $('<div class="level03Group" style="margin-left:30px">' + input.val() + inputHidden + '<button class=\"btn btn-danger btn-sm\" id="btnRemoveLevel3Group"><i class=\"fa fa-times\" aria-hidden=\"true\"></i></button>' + '</div>');
            $('td#Level03Group').append(elemento);
            input.val("");
        }
        input.focus();


    });
    $('#btnAddFrequenciaReincidencia').click(function (e) {

        e.preventDefault();

