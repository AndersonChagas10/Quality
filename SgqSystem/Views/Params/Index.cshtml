                                    $("#parLevel3Select2").val(retornoId)
                                }

                                //$('#level3Title').text('#' + $('#paramsDto_parLevel3Dto_Id').val() + ' - ' + $('#paramsDto_parLevel3Dto_Name').val());
                            });

                            console.log(statusmessage);



                        }
                        //console.log(objetoReturn);
                        //console.log(respostaCompleta);
                    });
                }

            },
        }
        /*Fim Submit Level3*/


        /*Vincula Level 3 ao level2*/
        var vinculoL1L2 = '@Html.Raw(@vinculoL1L2)';
        $('#vinculoLevel1').on('click', function (e) {

            var idLevel1 = $('#paramsDto_parLevel1Dto_Id').val();
            var idLevel2 = $('#paramsDto_parLevel2Dto_Id').val();//Verifico se tenho um level2 salvo
            var level2Selecionado = $('#parLevel2Select2 option:selected');
            var idLevel3Level2 = 0;

            if (idLevel2 == null || idLevel2 == undefined || idLevel2 <= 0 || idLevel1 == undefined || idLevel1 == null || idLevel1 <= 0) {
                alert('O level 2 deve estar salvo e vinculado a um level3 para ser Vinculado ao Level1.')
                return;
            }

            if (idLevel1 != undefined && idLevel1 != null && idLevel1 > 0) {
                if (level2Selecionado.data('l2l3') != null) {

                    idLevel3Level2 = level2Selecionado.data('l2l3').Id;

                    $.get(vinculoL1L2 + '/' + idLevel1 + '/' + idLevel3Level2, function (obj, responseText, xhr) {
                        if (obj != null) {
                            console.log(obj);
                            console.log("Vinculado L3 com L2 ID" + obj.Id);
                        }
                    });
                }
            }

        });

        /*Vincula Level 2 ao level1*/
        var vinculoL2L3 = '@Html.Raw(@vinculoL2L3)';
        $('#vinculoLevel2').on('click', function (e) {

            var idLevel2 = $('#paramsDto_parLevel2Dto_Id').val();
            var idLevel3 = $('#paramsDto_parLevel3Dto_Id').val();
            var level2Selecionado = $('#parLevel2Select2 option:selected');

            if (idLevel2 != undefined && idLevel3 != undefined)
                if (idLevel2 != null && idLevel3 != null)
                    if (idLevel2 > 0 && idLevel3 > 0) {

                        $.get(vinculoL2L3 + '/' + idLevel2 + '/' + idLevel3 + '/3', function (obj, responseText, xhr) {
                            if (obj != null) {
                                //console.log(obj)
                                level2Selecionado.data('l2l3', obj);
                                console.log("Vinculado L3 com L2 ID" + obj.Id);
                            }
                        });

                    }
        });

    </script>
