@model IEnumerable<Dominio.ParLevel3XModule>

@{
    ViewBag.Title = "Módulo X Tarefa";
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>Módulo X Tarefa</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">Módulo X Tarefa</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="setup_tab">
                                <p>
                                    @Html.ActionLink(Resources.Resource.create as string, "Create", null, new { @class = "btn btn-primary" })
                                </p>
                                <table class="table" id="tabelaModuloTarefa">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.ParCompany.Name)
                                               
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.ParDepartment.Name)*@
                                                @Resources.Resource.department
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.ParLevel1.Name)*@
                                                @Resources.Resource.level1
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.ParLevel2.Name)*@
                                                @Resources.Resource.level2
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.ParLevel3.Name)*@
                                                @Resources.Resource.level3
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.ParModule.Name)*@
                                                @Resources.Resource.parModule
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.Name)*@
                                                @Resources.Resource.name
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.IsActive)*@
                                                @Resources.Resource.is_active
                                            </th>
                                            <th>
                                                @*@Html.DisplayNameFor(model => model.Points)*@
                                                @Resources.Resource.impact
                                            </th>
                                            @*<th>
                                                @Resources.Resource.effective_date_end
                                            </th>
                                            <th>
                                                @Resources.Resource.effective_date_start
                                            </th>*@
                                            <th>Ações</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParCompany.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParDepartment.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParLevel1.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParLevel2.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParLevel3.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParModule.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Points)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EffectiveDateEnd)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.EffectiveDateStart)
                                            </td>
                                            <td>
                                                @Html.ActionLink(Resources.Resource.edit as string, "Edit", new { id = item.Id }, new { @class = "btn btn-success" })                                              
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>
<script>

    $(document).ready(function () {
        DataTableComResourcesEpropriedadesjaSetadas.aoColumns = [
            null,
            null,
            null,
            null,
            null,
            null,
            null,
            null,
            null,
            null,
            null,
            { "bSearchable": false }
        ];
        $('#tabelaModuloTarefa').dataTable(DataTableComResourcesEpropriedadesjaSetadas);
    });

</script>