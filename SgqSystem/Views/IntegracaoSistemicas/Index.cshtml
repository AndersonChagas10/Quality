@model IEnumerable<Dominio.IntegracaoSistemica>

@{
    ViewBag.Title = "Integração Sistémica";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Resources.Resource.sis_integration</span>
                </li>
            </ul>
            <div class="page-toolbar">
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.sis_integration</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="setup_tab">

                                <p>
                                    @Html.ActionLink(Resources.Resource._novo as string, "Create", null, new { @class = "btn btn-primary" })
                                </p>
                                <table class="table" id="tabelaIntegracao">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Resources.Resource.name
                                            </th>
                                            <th>
                                                @Resources.Resource.config
                                            </th>
                                            <th>
                                                Script
                                            </th>
                                            <th>
                                                @Resources.Resource.table_name
                                            </th>
                                            <th>
                                                @Resources.Resource.interval
                                            </th>
                                            <th>
                                                @Resources.Resource.executionTime
                                            </th>
                                            <th>
                                                @Resources.Resource.lastExecution
                                            </th>
                                            <th>
                                                @Resources.Resource.active
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Configuration)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Script)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TableName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Intervalo)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ExecutionTime)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LastExecution)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td>
                                                @Html.ActionLink(Resources.Resource.edit as string, "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                                                @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");

    $(document).ready(function () {

        closeLeftSidebar();

        DataTableComResourcesEpropriedadesjaSetadas.aoColumns = [
            null,
            null,
            null,
            null,
            null,
            null,
            { "bSearchable": false }
        ];

        $('#tabelaIntegracao').dataTable(DataTableComResourcesEpropriedadesjaSetadas);
    });
</script>
