@model IEnumerable<Dominio.ManDataCollectIT>

@{
    ViewBag.Title = "Index";
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content" style="min-height: 650px;">

        <div>
            <h3>Coleta de Indicadores Técnicos</h3>
        </div>

        <p>
            @Html.ActionLink("Nova Coleta", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Data da Coleta")
                </th>
                <th>
                    @Html.DisplayName("Unidade")
                </th>
                @*<th>
                        @Html.DisplayName("Periodicidade")
                    </th>*@
                @*<th>
                        @Html.DisplayName("Turno")
                    </th>*@
                <th>
                    @Html.DisplayName("Descrição da Coleta")
                </th>
                <th>
                    @Html.DisplayName("Quantidade")
                </th>
                @*<th>
                        @Html.DisplayName("Unidade de Medida"/*model => model.cc*/)
                    </th>*@
                <th>
                    @Html.DisplayName("Comentários")
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @if (item.ReferenceDatetime.HasValue)
                        {
                            @Html.Label(item.ReferenceDatetime.Value.ToString("dd/MM/yyyy"))
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ParCompany_Id)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.parFrequency_id)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Shift)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.DimManutencaoColetaITs.TechnicalIndicator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AmountData)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.ParMeasurementUnit_Id)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.Comments)
                    </td>
                    <td>
                        @Html.ActionLink("Alterar", "Edit", new { Id = item.Id }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.Id }) |*@
                        @Html.ActionLink("Excluir", "Delete", new { Id = item.Id })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>