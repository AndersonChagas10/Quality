@model Dominio.UserSgq
@{
    ViewBag.Title = Resources.Resource.new_user;
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content" style="min-height: 600px;">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="@Url.Action("Index", "UserSgq")">@Resources.Resource.users</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Resources.Resource._new</span>
                </li>
            </ul>
            <div class="page-toolbar">
                <!--<div id="dashboard-report-range" class="pull-right tooltips btn btn-fit-height green" data-placement="top" data-original-title="Change dashboard date range">-->
                @*<div id="dashboard-report-range" class="pull-right tooltips btn btn-fit-height green">
                        <i class="fa fa-calendar"></i>&nbsp;
                        <span class="thin uppercase" id="currentDate"></span>&nbsp;
                    </div>*@
            </div>
        </div>
        <!-- END PAGE BAR -->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.new_user</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">

                            <div class="tab-pane active" id="setup_tab">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        @Html.HiddenFor(r => r.Id)

                                        <div class="form-group">
                                            @Html.Label(Resources.Resource.fullname, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.Editor("userSgqDto.FullName", new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>

                                        @*<div class="form-group hide">
                                                @Html.Label(Resources.Resource.date, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.Editor("userSgqDto.AccessDate", new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>

                                            <div class="form-group hide">
                                                <div class="col-md-10">
                                                    @Html.Editor("userSgqDto.AddDate", new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>

                                            <div class="form-group hide">
                                                <div class="col-md-10">
                                                    @Html.Editor("userSgqDto.AlterDate", new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>*@

                                        <div class="form-group">
                                            @Html.Label(Resources.Resource.email, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.Editor("userSgqDto.Email", new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label(Resources.Resource.phone, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.Editor("userSgqDto.Phone", new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>

                                        @*<div class="form-group">
                                                @Html.Label(Resources.Resource.default_company, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.DropDownList("userSgqDto.ParCompany_Id", new SelectList(ViewBag.listaParCompany, "Id", "Name"), new { @class = "form-control" })
                                                </div>
                                            </div>*@

                                        <div class="form-group">
                                            @Html.Label(Resources.Resource.company, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownList("userSgqDto.ListParCompany_Id", new SelectList(ViewBag.listaParCompany, "Id", "Name"), new { @class = "form-control required", required = "required" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.Label(Resources.Resource.role, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.DropDownList("userSgqDto.ListRole", new SelectList(ViewBag.listaRoleSGQ, "Name", "Name"), new { @class = "form-control" })
                                            </div>
                                        </div>

                                        <hr />

                                        @if (@DTO.GlobalConfig.Eua)
                                        {
                                            <div class="form-group">
                                                @Html.Label(Resources.Resource.use_active_directory, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    <input id="userSgqDto_UseActiveDirectory" name="userSgqDto.UseActiveDirectory" type="checkbox" value="">
                                                </div>
                                            </div>
                                        }

                                        <div class="form-group">
                                            @Html.Label(Resources.Resource.username, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-10">
                                                @Html.Editor("userSgqDto.Name", new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>

                                        <div id="passwordContainer">
                                            <div class="form-group">
                                                @Html.Label(Resources.Resource.password, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.Editor("userSgqDto.Password", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                                    @*<span id="errMsg"></span>*@
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                @Html.Label(Resources.Resource.confirm_password, htmlAttributes: new { @class = "control-label col-md-2" })
                                                <div class="col-md-10">
                                                    @Html.Editor("userSgqDto.ConfirmPassword", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <button type="button" id="btnSave" class="btn btn-primary">@Resources.Resource.save</button>
                                                @Html.ActionLink(Resources.Resource.back_to_list, "Index", null, new { @class = "btn btn-default" })
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <!-- END CONTENT BODY -->
</div>

<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");
    navbarSelect("navbar15");

    $('#userSgqDto_AddDate').val(new Date($.now()).toUTCString());

    $(document).on('switchChange.bootstrapSwitch', '#userSgqDto_UseActiveDirectory', function () {
        $(this).is(":checked") ? $('#userSgqDto_UseActiveDirectory').val(true) : $('#userSgqDto_UseActiveDirectory').val(false)
        setupAD();
    });

    function setupAD() {
        if ($('#userSgqDto_UseActiveDirectory').length > 0) {
            if ($('#userSgqDto_UseActiveDirectory').prop('checked')) {
                $('#passwordContainer').addClass('hide');
            } else {
                $('#passwordContainer').removeClass('hide');
            }
        }
    }

    $(document).on("click", "#btnSave", function () {

        var valid = true;

        if ($("#userSgqDto_FullName").val() == "") {
            openMessageModal(Resources('fullname_required'), '');
            return;
        }

        if ($("#userSgqDto_Name").val() == "") {
            openMessageModal(Resources('username_required'), '');
            return;
        }

        if ($("#userSgqDto_ListParCompany_Id").val().length == 0) {
            openMessageModal(Resources('select_one_company'), '');
            return;
        }

        if (!$('#passwordContainer').hasClass('hide')) {
            if ($("#userSgqDto_Password").val() == "") {
                openMessageModal(Resources('password_required'), '');
                return;
            }

            if ($("#userSgqDto_Password").val() != $("#userSgqDto_ConfirmPassword").val()) {
                openMessageModal(Resources('invalid_password'), '');
                return;
            }
        }

        $.post("@Url.Action("Save", "UserSgq")", $('form').serializeObject(), function (data) {

            if (data == "True") {
                openMessageModal(Resources('user_save_success'), '');
            } else {
                openMessageModal(Resources('repeated_username'), '');
            }

        })
    });

    $(document).ready(function () {
        $.fn.bootstrapSwitch.defaults.size = 'small';
        $.fn.bootstrapSwitch.defaults.onText = '@Resources.Resource.yes';
        $.fn.bootstrapSwitch.defaults.offText = '@Resources.Resource.no';
        $("[type='checkbox']").bootstrapSwitch();

        $("#userSgqDto_ListParCompany_Id").attr("multiple", "multiple");
        $("#userSgqDto_ListParCompany_Id").select2();

        $("#userSgqDto_ListRole").attr("multiple", "multiple");
        $("#userSgqDto_ListRole").select2();

        $("#userSgqDto_UseActiveDirectory").prop('checked', true);
        $("#userSgqDto_UseActiveDirectory").trigger("change");

        //setupAD();

    });

</script>

<script>
    $(document).ready(function () {
        closeLeftSidebar();
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
