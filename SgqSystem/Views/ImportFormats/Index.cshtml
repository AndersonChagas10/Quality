@model IEnumerable<Dominio.ImportFormat>

@{
    ViewBag.Title = "Index";
}


<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Resources.Resource.import_format</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.import_format</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="setup_tab">

                                <p>
                                    @Html.ActionLink(Resources.Resource.create as string, "Create", null, new { @class = "btn btn-primary" })
                                </p>
                                <table class="table" id="tabelaFormatos">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.title as string)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.add_date as string)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.alter_date as string)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.is_active as string)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Title)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AddDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AlterDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IsActive)
                                                    @*@Html.Raw((item.IsActive == true) ? Resources.Resource.yes : Resources.Resource.no)*@
                                                </td>
                                                <td>
                                                    @Html.ActionLink(Resources.Resource.edit as string, "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                                                    @Html.ActionLink(Resources.Resource.details as string, "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>
<script>
       $(document).ready(function () {
           closeLeftSidebar();
           DataTableComResourcesEpropriedadesjaSetadas.aoColumns = [
               null,
               null,
               null,
               null,
               { "bSearchable": false }
           ];
           $('#tabelaFormatos').dataTable(DataTableComResourcesEpropriedadesjaSetadas);
    });
</script>
