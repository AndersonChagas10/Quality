@model Dominio.ParReportXFilter

@{
    /**/

    ViewBag.Title = "Edição relatório X Layout";
}

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                    <a href="@Url.Action("Index", "ParReportLayoutXReportXUser")">Cadastro relatório X Filtro</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Resources.Resource.create</span>
                </li>
            </ul>
        </div>
        <!-- END PAGE BAR -->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.edit  Cadastro relatório X Filtro</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="setup_tab">

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <input id="ReportXUserSgq_Id" name="ReportXUserSgq_Id" class="hidden" value="@ViewBag.ReportXUser_Id" />

                                        <input id="Level1_Id" name="Level1_Id" class="hidden" value="@ViewBag.Level1Id" />

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.FilterLevel, "Filtro", htmlAttributes: new { @class = "control-label col-md-3" })
                                            <div class="col-md-6">
                                                @Html.DropDownListFor(m => m.FilterLevel, (SelectList)ViewBag.NiveisFiltro_Id, "Selecionar", new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.FilterLevel, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="col-md-offset-3 col-md-9">
                                                <input type="submit" value="@Resources.Resource.save" class="btn btn-primary" />

                                                @Html.ActionLink(Resources.Resource.back as string + " para detalhes", "Details", "ReportXUserSgq", new { id = ViewBag.ReportXUser_Id }, new { @class = "btn btn-default" })

                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/Select3/select3.js"></script>
<style>
    .ui-autocomplete {
        max-height: 100px;
        overflow-y: auto;
        /* prevent horizontal scrollbar */
        overflow-x: hidden;
        /* add padding to account for vertical scrollbar */
        padding-right: 20px;
    }
    /* IE 6 doesn't support max-height
    * we use height instead, but this forces the menu to always be this tall
    */
    * html .ui-autocomplete {
        height: 100px;
    }
</style>

<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");
    navbarSelect("navbar4");
    $('select').select2();


    $(document).ready(function () {
        closeLeftSidebar();
    });
</script>

