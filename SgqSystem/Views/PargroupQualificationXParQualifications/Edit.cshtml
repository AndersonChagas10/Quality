@model Dominio.PargroupQualificationXParQualification

@{
    ViewBag.Title = "Criar - Grupo de Qualificação X Qualificação";
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                    <a href="@Url.Action("Index", "PargroupQualificationXParQualification")">@Resources.Resource.Qualification_Group X @Resources.Resource.qualification</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Resources.Resource.create</span>
                </li>
            </ul>
            <div class="page-toolbar">
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.create @Resources.Resource.Qualification_Group X @Resources.Resource.qualification</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="setup_tab">

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.ParQualification_Id, @Resources.Resource.qualification as string, htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-6">
                                            <button id="btnBuscaParQualification" type="button"
                                                    data-filtroselect3-btn
                                                    data-filtroselect3-select="select[name=ParQualification_Id]"
                                                    data-filtroselect3-url="@Url.Action("GetFilteredParQualification", "api/Formulario")">
                                                Abrir
                                            </button>
                                            <select class="form-control" name="ParQualification_Id" id="ParQualification_Id">
                                                <option value="@ViewBag.ParentsCreate[0].Key" selected="selected">@ViewBag.ParentsCreate[0].Value</option>
                                            </select>
                                            <div class="text-danger">@ViewBag.JaExiste</div>
                                        </div>
                                    </div>
                                    @Html.HiddenFor(model => model.PargroupQualification_Id)
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.IsActive, @Resources.Resource.is_active as string, htmlAttributes: new { @class = "control-label col-md-3" })
                                        <div class="col-md-6">
                                            <div class="checkbox">
                                                @Html.EditorFor(model => model.IsActive)
                                                @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    @Html.HiddenFor(model => model.PargroupQualification_Id)
                                    <div class="form-group">
                                        <div class="col-md-offset-3 col-md-9">
                                            <input type="submit" value="@Resources.Resource.save" class="btn btn-primary" />
                                            @Html.ActionLink(Resources.Resource.back_to_list as string, "Details", "PargroupQualification", new { id = Model.PargroupQualification_Id }, new { @class = "btn btn-default" })
                                        </div>
                                    </div>
                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/Select3/select3.js"></script>
<style>
    .ui-autocomplete {
        max-height: 100px;
        overflow-y: auto;
        overflow-x: hidden;
        padding-right: 20px;
    }

    * html .ui-autocomplete {
        height: 100px;
    }
</style>

<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");
    navbarSelect("navbar4");
    $('select').select2();

    $(document).ready(function () {
        closeLeftSidebar();
    });
</script>
