@model IEnumerable<Dominio.PargroupQualificationXParQualification>

<div class="portlet light bordered">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="icon-share font-dark"></i>
            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.Qualification_Group x @Resources.Resource.qualification</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="tab-content">
            <div class="tab-pane active" id="setup_tab">
                <p>
                    @Html.ActionLink(Resources.Resource.create as string, "Create", "PargroupQualificationXParQualifications", new { id = ViewBag.PargroupQualification_Id }, new { @class = "btn btn-primary" })
                </p>
                <table class="table dataTable" id="tabelaPargroupQualificationXParQualification">
                    <thead style="background-color: cornflowerblue;">
                        <tr>
                            <th hidden>
                                PargroupQualification_Id
                            </th>
                            <th>
                                @Resources.Resource.qualification
                            </th>
                            <th>
                                @Resources.Resource.is_active
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td hidden>
                                    @Html.DisplayFor(modelItem => item.PargroupQualification_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ParQualification.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", "PargroupQualificationXParQualifications", new { id = item.Id }, new { @class = "btn btn-success" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");
    navbarSelect("navbar4");

</script>

<script>

    $(document).ready(function () {
        closeLeftSidebar();

        DataTableComResourcesEpropriedadesjaSetadas.aoColumns = [
            null,
            null,
            null,
            null,
            { "bSearchable": false }
        ];
        $('#tabelaPargroupQualificationXParQualification').dataTable(DataTableComResourcesEpropriedadesjaSetadas);
    });

</script>
