@model IEnumerable<DTO.DTO.ItemMenuDTO>

@{
    ViewBag.Title = Resources.Resource.item_menu;
}

<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "ItemMenu")">Home</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Resources.Resource.item_menu</span>
                </li>
            </ul>
            <div class="page-toolbar">
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.item_menu</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">

                            <div class="tab-pane active" id="setup_tab">
                                <p>
                                    @Html.ActionLink(Resources.Resource._novo, "Create", null, new { @class = "btn btn-primary" })
                                </p>
                                <table class="table tableIndex">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Menu Predecessor")
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.add_date)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.alter_date)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.name)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.icon)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.url)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.resource)
                                            </th>
                                            <th>
                                                @Html.DisplayName(Resources.Resource.is_active)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MenuPredecessor.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AddDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AlterDate)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Icon)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Url)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Resource)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.IsActive)
                                                </td>
                                                <td>
                                                    @Html.ActionLink(Resources.Resource.edit, "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");
    navbarSelect("navbar15");

</script>

<script>
    $(document).ready(function () {
        closeLeftSidebar();
    });
</script>