@model ICollection<Dominio.Seara.ParFamiliaProdutoXParProduto>

<div class="portlet light bordered">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="icon-share font-dark"></i>
            <span class="caption-subject font-dark bold uppercase">Familia ProdutoXProduto</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="tab-content">
            <div class="tab-pane active" id="setup_tab">
                <p>
                    @Html.ActionLink(Resources.Resource.create as string, "Create", "ParFamiliaProdutoXParProduto", new { id = ViewBag.ParFamiliaProduto_Id }, new { @class = "btn btn-primary" })
                </p>
                <table class="table dataTable" id="tabelaParFamiliaProdutoXParProduto">
                    <thead style="background-color: cornflowerblue;">
                        <tr>
                            <th hidden>
                                ParFamiliaProduto_Id
                            </th>
                            <th>
                                @Resources.Resource.seara_Produto
                            </th>
                            <th hidden>
                                @Resources.Resource.unit
                            </th>
                            <th>
                                @Resources.Resource.is_active
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.ParFamiliaProduto_Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ParProduto.Name)
                            </td>
                            <td hidden>
                                @Html.DisplayFor(modelItem => item.ParCompany.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Edit", "ParFamiliaProdutoXParProduto", new { id = item.Id }, new { @class = "btn btn-success" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>

    $(".sidebar-toggler").removeClass("hide");
