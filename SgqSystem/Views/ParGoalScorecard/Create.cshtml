@model Dominio.ParGoalScorecard

@{
    if (Model.Id == 0)
    {
        ViewBag.Title = Resources.Resource.create;
    }
    else
    {
        ViewBag.Title = Resources.Resource.edit;
    }
}
<div class="page-content-wrapper" style="background-color:white; padding-left:50px">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal" style="background-color:white">
            <h4>Criar Configuração para Scorecard</h4>
            <hr />
            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
            @{ Html.EnableClientValidation(false); }
            @Html.HiddenFor(model => model.Id)

            <div class="form-group">
                @Html.Label("Limite inferior", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PercentValueMid, new { htmlAttributes = new { @class = "form-control; max-width:210px; decimal-esquerda" } })
                    @*@Html.ValidationMessageFor(model => model.PercentValueMid, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Limite superior", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PercentValueHigh, new { htmlAttributes = new { @class = "form-control; max-width:210px; decimal-esquerda" } })
                    @*@Html.ValidationMessageFor(model => model.PercentValueHigh, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Data de inicio vigência", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.InitDate, new { htmlAttributes = new { @class = "form-control; max-width:210px; DataPiker" } })
                    @*@Html.ValidationMessageFor(model => model.InitDate, "", new { @class = "text-danger" })*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="@ViewBag.Title" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink(Resources.Resource.back_to_list as string, "Index")
    </div>
</div>

<script>

</script>