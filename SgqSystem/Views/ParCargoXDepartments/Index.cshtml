@model IEnumerable<Dominio.ParCargoXDepartment>

@{
    ViewBag.Title = Resources.Resource.create ;  
}

<div class="portlet light bordered">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="icon-share font-dark"></i>
            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.cargo X @Resources.Resource.department</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="tab-content">
            <div class="tab-pane active" id="setup_tab">

                <p>
                    @Html.ActionLink(Resources.Resource.create as string, "Create", "ParCargoXDepartments", new { parCargoId = ViewBag.ParCargoId }, new { @class = "btn btn-primary" })
                </p>
                <table class="table" id="tabelaCargoXDepartment">
                    <thead>
                        <tr>
                            <th>
                                @Resources.Resource.cargos
                            </th>
                            <th>
                                @Resources.Resource.costcenter
                            </th>
                            <th>
                                @Resources.Resource.active
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ParCargo.Name)
                                </td>
                                <td>
                                    @(item.ParDepartment.Hash != null ? item.ParDepartment.Hash + "/" : "")  @item.ParDepartment.Id - @item.ParDepartment.Name

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    @Html.ActionLink(Resources.Resource.delete as string, "Delete", "ParCargoXDepartments", new { id = item.Id }, new { @class = "btn btn-danger" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");

    $(document).ready(function () {

        closeLeftSidebar();

        DataTableComResourcesEpropriedadesjaSetadas.aoColumns = [
            null,
            null,
            null,
            { "bSearchable": false }
        ];

        $('#tabelaCargoXDepartment').dataTable(DataTableComResourcesEpropriedadesjaSetadas);
    });
</script>