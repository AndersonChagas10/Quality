@model Dominio.VolumePcc1b

@{
    ViewBag.Title = "Delete";
    var data = "";
    if (Model.Data.HasValue)
    {
        data = Model.Data.Value.ToString("dd/MM/yyyy");
    }
}


<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="@Url.Action("Index", "Home")">Home</a>
                    <i class="fa fa-angle-right"></i>
                    <a href="@Url.Action("Index", "Pcc1b")">PCC1B</a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span>@Resources.Resource.pcc1b</span>
                </li>
            </ul>
            <div class="page-toolbar"></div>
        </div>
        <!-- END PAGE BAR -->
        <!-- END PAGE HEADER-->
        <div class="row">
            <div class="col-xs-12">
                <div class="portlet light bordered">
                    <div class="portlet-title tabbable-line">
                        <div class="caption">
                            <i class="icon-share font-dark"></i>
                            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.clusters</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="setup_tab">

                                @if (Model.Data >= DateTime.Now.Date)
                                {
                                    <h4>
                                        Deseja excluir o
                                        volume de produção de <b>@Html.DisplayFor(model => model.ParLevel1.Name)</b>
                                        do dia <b><div style="display:inline;"> @data </div></b>
                                        da unidade de <b>@Html.DisplayFor(model => model.ParCompany.Name)</b>
                                        , no @Resources.Resource.shift <b>@Html.DisplayFor(model => model.Shift.Description)</b>?
                                    </h4>
                                }
                                else
                                {
                                    <div class="alert alert-danger">
                                        <h4>
                                            <strong>Atenção!</strong>
                                            Não é mais possivel excluir volumes com datas retroativas
                                        <h4>
                                    </div>
                                }
                                <br />
                                <div>
                                    @if (Model.IsRetroativo)
                                    {
                                        <h3 class="alert alert-danger">Volume com data retroativa, a exclusão está bloqueada.</h3>

                                    }
                                    @using (Html.BeginForm())
                                    {
                                        @Html.AntiForgeryToken()

                                        <div class="form-actions no-color">
                                            @if (Model.Data >= DateTime.Now.Date)
                                            {
                                                <input type="submit" value="Sim, pode excluir" class="btn btn-danger" />
                                            }
                                            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                                        </div>
                                    }

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>
<script>

    $(".sidebar-toggler").removeClass("hide");
    $(".page-sidebar-wrapper").removeClass("hide");
    navbarSelect("navbar7");

    $(document).ready(function () {
        closeLeftSidebar();
    });

</script>