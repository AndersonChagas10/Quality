@using DTO.DTO.Params
@using Resources

@{
    ViewBag.Title = "Jobs";
}


<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content monitor-get-tela">

        <h2>Jobs</h2>

        @if (ViewBag.UltimaExecucaoDoJob != null)
            {
            <table class="table" id="tableAllUnitTelaTablete">

                <thead>
                    <tr>
                        <th>@Resource.name</th>
                        <th>@Resource.final_date</th>
                        <th>@Resource.minutes</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var job in ViewBag.UltimaExecucaoDoJob)
                    {
                        <tr>
                            <td>@job.Key</td>
                            <td>@job.Value</td>
                            <td>@Math.Floor(DateTime.Now.Subtract(job.Value).TotalMinutes)</td>
                        </tr>
                    }
                </tbody>

            </table>
        }
    </div>
</div>


@section Scripts {

    <script>

        $(".sidebar-toggler").removeClass("hide");
        $(".page-sidebar-wrapper").removeClass("hide");
        closeLeftSidebar();

    </script>
}