@{
    /**/

    ViewBag.Title = "Relatório de Auditoria Comportamental";
    ViewBag.SubTitle = "";

    Layout = "~\\Views\\RelatoriosSgq\\_FilterReportsHorizontal.cshtml";



    var urlGet = Url.Action("GetAuditoriaComportamental", "api/AuditoriaComportamental");
    var urlGetUnidade = Url.Action("GetAuditoriaComportamentalUnidade", "api/AuditoriaComportamental");
    var urlGetUnidadePorSetor = Url.Action("GetAuditoriaComportamentalUnidadePorSetor", "api/AuditoriaComportamental");
    var urlGetAcompanhamento = Url.Action("GetAuditoriaComportamentalAcompanhamento", "api/AuditoriaComportamental");
    var urlGetListaAuditores = Url.Action("GetListaAuditores", "api/AuditoriaComportamental");

    ViewBag.ShowCurrentDate = false;
    ViewBag.ShowRangeDate = true;
    ViewBag.ShowParCompany = true;
    ViewBag.ShowParStructure2 = true;
    ViewBag.ShowParLevel2GQ = false;
    ViewBag.ShowUserSgqAuditor = true;
    ViewBag.ShowParStructure3 = true;
    ViewBag.ShowParLevel2 = false;
    ViewBag.ShowParDepartment = true;
    ViewBag.ShowUserCompanies = true;

}

@section Content {

    <style>
        .page-content {
            background-color: #efefef;
        }

        .card-border {
            border-radius: 8px !important;
            border: 1px solid #dedede;
            padding: 5px;
            text-align: center;
            background-color: #fff;
            margin-bottom: 0px;
        }

        #divVisaoUnidade > div, #divVisaoGeral > div {
            margin-bottom: 10px !important;
        }
    </style>

    <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
        <li class="nav-item active">
            <a class="nav-link" id="visaoGeral" data-toggle="pill" role="tab"
               val="1">Visão Geral</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="visaoUnidade" data-toggle="pill"
               role="tab"
               val="2">Visão Unidade</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="acompanhamentoAuditoria" data-toggle="pill"
               role="tab"
               val="3">Acompanhamento da Auditoria</a>
        </li>
    </ul>
   
    <div id="message">

    </div>


    <div class="row hidden" id="divVisaoGeral">
        @Html.Partial("~\\Views\\Relatorios\\RH\\_AuditoriaComportamental.cshtml")
    </div>

    <div class="row hidden" id="divVisaoUnidade">
        @Html.Partial("~\\Views\\Relatorios\\RH\\_AuditoriaComportamentalVisaoUnidade.cshtml")
    </div>

    <div class="row hidden" id="divAcompanhamento">
        @Html.Partial("~\\Views\\Relatorios\\RH\\_AuditoriaComportamentalAcompanhamento.cshtml")
    </div>
}

@section Scripts {
    <script>
        var globalTotalRealizado = 0;
        var urlGet = '@Html.Raw(@urlGet)';
        var urlGetUnidade = '@Html.Raw(@urlGetUnidade)';
        var urlGetUnidadePorSetor = '@Html.Raw(@urlGetUnidadePorSetor)';
        var urlGetAcompanhamento = '@Html.Raw(@urlGetAcompanhamento)';
        var urlGetListaAuditores = '@Html.Raw(@urlGetListaAuditores)';
    </script>

    <script src="~/Scripts/relatoriosRH/AuditoriaComportamental/visaoGeral.js"></script>

}
