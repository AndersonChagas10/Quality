@model Dominio.ImportFormat


<div class="portlet light bordered">
    <div class="portlet-title tabbable-line">
        <div class="caption">
            <i class="icon-share font-dark"></i>
            <span class="caption-subject font-dark bold uppercase">@Resources.Resource.import_format_itens</span>
        </div>
    </div>
    <div class="portlet-body">
        <div class="tab-content">
            <div class="tab-pane active" id="setup_tab">

                <p>
                    @Html.ActionLink(Resources.Resource.create as string, "Create", "ImportFormatItems", new { id = Model.Id }, new { @class = "btn btn-primary" })
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayName(Resources.Resource.key as string)
                        </th>
                        <th>
                            @Html.DisplayName(Resources.Resource.value as string)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model.ImportFormatItems)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Key)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td>
                                @Html.ActionLink(Resources.Resource.edit as string, "Edit", "ImportFormatItems", new { id = item.Id }, new { @class = "btn btn-success" })
                                @Html.ActionLink(Resources.Resource.delete as string, "Delete", "ImportFormatItems", new { id = item.Id }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </table>
            </div>

        </div>
    </div>
</div>