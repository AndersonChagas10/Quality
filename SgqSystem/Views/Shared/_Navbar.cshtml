@using DTO
@{
    Layout = null;
    var urlDataCollection = ViewBag.UrlDataCollect;
    //var urlDataCollection = Url.Action("", "DataCollect");
    var urlCorrectiveActionReport = Url.Action("CorrectiveActionReport", "Reports");
    var urlDataCollectionReport = Url.Action("DataCollectionReport", "Reports");
    var urlCustomization = Url.Action("Index", "Params");
    var urlHome = Url.Action("Index", "Home");
    var urlScorecard = Url.Action("Scorecard", "RelatoriosSgq");
    var urlRelatorioDiario = Url.Action("RelatorioDiario", "RelatoriosSgq");
    var urlApontamentosDiarios = Url.Action("ApontamentosDiarios", "RelatoriosSgq");
}

<div class="page-header navbar navbar-fixed-top" style="z-index: 3030 !important;">
    <div class="page-header-inner">
        <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse">
            <span></span>
        </a>
        <div class="" style="width:150px">
            @*<a href="@Url.Action("Index", "Home")" class="hide">
                <img style="height: 45px; margin: 4px;" src="~/Imagens/Logo.png" />
            </a>*@
            <div class="pull-left" style="width:150px">
                <div class="menu-toggler sidebar-toggler hide pull-left" style="margin-left:12px;margin-right:12px;">
                    <span></span>
                </div>
                <a href="@Url.Action("Index", "Home")" style="text-decoration:none" class="pull-left navbar-sgq-brand">
                    <h1 style="color: #ffffff; margin-top: 5px !important; font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif;text-decoration:none">SGQ</h1>
                </a>
            </div>
        </div>


        @*@if (Session["username"] != null)*@
        @if (HttpContext.Current.Request.Cookies["webControlCookie"] != null)
        {
            <div class="hor-menu hide" id="navbarLeft">
                <ul class="nav navbar-nav pull-left">
                    <li class="mega-menu-dropdown" aria-haspopup="true">
                        <a href="@urlHome" class="dropdown-toggle" data-hover="megamenu-dropdown" data-close-others="true">
                            @Resources.Resource.home
                        </a>
                    </li>
                    <li class="mega-menu-dropdown" aria-haspopup="true">
                        <a href="@urlDataCollection" class="dropdown-toggle" data-hover="megamenu-dropdown" data-close-others="true">
                            @Resources.Resource.data_collection
                        </a>
                    </li>
                    <li class="mega-menu-dropdown" aria-haspopup="true">
                        <a href="#" class="dropdown-toggle" data-hover="megamenu-dropdown" data-close-others="true">
                            @Resources.Resource.management
                            <i class="fa fa-angle-down" aria-hidden="true"></i>
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <!-- Content container to add padding -->
                                <div class="mega-menu-content">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <ul class="mega-menu-submenu">

                                                @*@if (GlobalConfig.Brasil)
                                                    {*@
                                                <li>
                                                    <a href="@urlScorecard">Scorecard</a>
                                                </li>
                                                <li>
                                                    <a href="@urlRelatorioDiario">Relatorio Diário</a>
                                                </li>
                                                <li>
                                                    <a href="@urlApontamentosDiarios">Apontamentos Diarios</a>
                                                </li>
                                                @*}*@

                                                @if (GlobalConfig.Eua)
                                                {
                                                    <li>
                                                        <a href="@urlCorrectiveActionReport">@Resources.Resource.corrective_action_reports</a>
                                                    </li>
                                                    <li>
                                                        <a href="@urlDataCollectionReport">@Resources.Resource.data_collection_reports</a>
                                                    </li>
                                                }

                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <li class="mega-menu-dropdown" aria-haspopup="true">
                        <a href="@urlCustomization" class="dropdown-toggle" data-hover="megamenu-dropdown" data-close-others="true">
                            @Resources.Resource.customization
                        </a>
                    </li>
                </ul>
            </div>
        }

        <div class="top-menu">

            <ul class="nav navbar-nav pull-right">

                <li class="dropdown dropdown-user" style="display:none" id="lang">
                    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true" aria-expanded="false">
                        <i class="fa fa-globe" aria-hidden="true"></i>
                        <span class="username username-hide-on-mobile"> @Resources.Resource.language </span>
                        <i class="fa fa-angle-down"></i>
                    </a>

                    <ul class="dropdown-menu dropdown-menu-default">
                        <li>
                            <a href="@Url.Action("ChangeCulture", "Home", new { language = "pt-BR" } )" id="btnBR">
                                <img src="~/Imagens/Brazil.png" /> Português-BR
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("ChangeCulture", "Home", new { language = "en" } )" id="btnEN">
                                <img src="@Url.Content("~/Imagens/United-States.png")" /> English-US
                            </a>
                        </li>

                    </ul>
                </li>

                @*@if (Session["username"] != null)*@
                @if (HttpContext.Current.Request.Cookies["webControlCookie"] != null)
            {
                    <li class="dropdown dropdown-user">
                        <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true" aria-expanded="false">
                            <i class="fa fa-user"></i>
                            <span class="username username-hide-on-mobile"> @HttpContext.Current.Request.Cookies["webControlCookie"].Values["userName"].ToString() </span>
                            <i class="fa fa-angle-down"></i>
                        </a>

                        <ul class="dropdown-menu dropdown-menu-default">
                            <li>
                                <a href="@Url.Action("Perfil", "UserSgq")">
                                    <i class="fa fa-user" aria-hidden="true"></i> @Resources.Resource.perfil_user
                                </a>
                            </li>
                            <li class="divider"> </li>
                            <li>
                                <a href="@Url.Action("LogOut", "UserAuthentication")">
                                    <i class="fa fa-sign-out" aria-hidden="true"></i> @Resources.Resource.log_out
                                </a>
                            </li>
                        </ul>
                    </li>
                }

            </ul>
        </div>

    </div>
</div>

<script language="javascript" type="text/javascript">

    $('.dropdown-btn-config').click(function () {
        if ($('.page-quick-sidebar-wrapper').css('right') == '0px')
            closeRightSidebar();
        else
            openRightSidebar();
    });

    $('.menu-toggler').click(function () {
        if ($('.page-sidebar-menu').hasClass('page-sidebar-menu-closed')) {
            openLeftSidebar();
        } else {
            closeLeftSidebar();
        }
    });

    $('.dropdown-user').click(function () {
        closeRightSidebar();
    });

    function openRightSidebar() {
        $('.page-quick-sidebar-wrapper').css('right', '0px');
    }

    function closeRightSidebar() {
        $('.page-quick-sidebar-wrapper').css('right', '-320px');
    }

    function openLeftSidebar() {
        $('.page-sidebar-menu').removeClass('page-sidebar-menu-closed');
        $('.page-sidebar-menu').parent().removeClass('zindex-control')
        $('body').removeClass('page-sidebar-closed');
        $('#sidebar-wrapper').css('margin-left', '-65px');
        $('.report-wrapper').css('margin-left', '10px');
        $('.report-wrapper').css('padding-top', '30px !important');
        //$('.page-content').css('padding-right', '230px');

    }

    function closeLeftSidebar() {
        $('.page-sidebar-menu').addClass('page-sidebar-menu-closed')
        setTimeout(function () {
            $('.page-sidebar-menu').parent().addClass('zindex-control')
        }, 500)
        $('body').addClass('page-sidebar-closed');
        $('#sidebar-wrapper').css('margin-left', '-255px');
        $('.report-wrapper').css('margin-left', '10px');
        $('.report-wrapper').css('padding-top', '30px !important');
        //$('.page-content').css('padding-right', '30px');
    }


</script>
