@using SgqSystem.Helpers
<div>
    <button class="btn btn-primary" onclick="indexRole.openRole();">@Resources.Resource.new_role</button>

    <table class="table margin-top">
        <thead>
            <tr>
                <th style="width:45%">@Resources.Resource.screen_component</th>
                <th style="width:45%">@Resources.Resource.role</th>
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var component in ViewBag.listaScreenComponent)
            {
                <tr>                    
                    <td>
                        @component.Component
                    </td>
                    <td>
                        @component.Type
                    </td>
                    <td>
                        <button onclick="indexRole.openRole(@component.Id)" class="btn btn-primary btn-sm">@Resources.Resource.edit</button>
                    </td>
                 </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="modalRoleSgq" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">@Resources.Resource.new_role</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <form id="formRoleSgq">
                                <div class="form-group hide">
                                    <input type="hidden" name="Id" class="form-control input-sm">
                                </div>
                                <div class="form-group">
                                    <label>@Resources.Resource.role</label>
                                    <input id="Role" class="form-control input-sm">
                                </div>
                                <div class="form-group">
                                    <label>@Resources.Resource.screen_component</label>
                                    @Html.DropDownList("ScreenComponent_Id", new SelectList(ViewBag.listaScreenComponent, "Id", "Component"), Resources.Resource.select + "...", new { @class = "form-control input-sm" })
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Resource.close</button>
                    <button type="button" class="btn btn-primary" onclick="indexRole.saveRole()">@Resources.Resource.save</button>
                </div>
            </div>
        </div>
    </div>

</div>
