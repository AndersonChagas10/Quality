@model DTO.SgqConfig

@{
    ViewBag.Title = Resources.Resource.config;
}


<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE TITLE-->


        <h1>@ViewBag.Title</h1>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                <h4>Configuração do Global Config</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @*@Html.HiddenFor(model => model.Id)*@

                <div class="form-group">
                    @Html.LabelFor(model => model.ActiveIn, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("SgqConfig.ActiveIn", ViewBag.ActiveIn as SelectList, Resources.Resource.select + "...", new { @class = "form-control" })
                        @*@Html.EditorFor(model => model.ActiveIn, new { htmlAttributes = new { @class = "form-control" } })*@
                        @Html.ValidationMessageFor(model => model.ActiveIn, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.recoveryPassAvaliable, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-1">
                        @Html.Editor("SgqConfig.recoveryPassAvaliable", new { htmlAttributes = new { @class = "form-control check-box", @type= "checkbox" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.urlPreffixAppColleta, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("SgqConfig.urlPreffixAppColleta", new { htmlAttributes = new { @class = "form -control" } })
                        @Html.ValidationMessageFor(model => model.urlPreffixAppColleta, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.urlAppColleta, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("SgqConfig.urlAppColleta", new { htmlAttributes = new { @class = "form -control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.mockLoginEUA, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-1">
                        @Html.Editor("SgqConfig.mockLoginEUA", new { htmlAttributes = new { @class = "form-control check-box", @type = "checkbox" } })
                    </div>
                </div>
            </div>

            <div class="form-horizontal">
                <hr />
                <h4>Configuração da Compania</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.Label(Resources.Resource.name, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("parCompanyDto.Name", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label(Resources.Resource.description, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("parCompanyDto.Description", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label(Resources.Resource.initials, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("parCompanyDto.Phone", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>

            <div class="form-horizontal">
                <hr />
                <h4>Configuração do Primeiro Usuario</h4>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @*@Html.HiddenFor(model => model.Id)*@

                <div class="form-group">
                    @Html.Label(Resources.Resource.fullname, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("userSgqDto.FullName", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label(Resources.Resource.email, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("userSgqDto.Email", new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label(Resources.Resource.phone, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("userSgqDto.Phone", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label(Resources.Resource.username, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.Editor("userSgqDto.Name", new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div id="passwordContainer">
                    <div class="form-group">
                        @Html.Label(Resources.Resource.password, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Editor("userSgqDto.Password", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label(Resources.Resource.confirm_password, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.Editor("userSgqDto.ConfirmPassword", new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                        </div>
                    </div>
                </div>
            </div>


            <hr />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Configurar" class="btn btn-primary" />
                </div>
            </div>
        }
        <div class="clearfix"></div>
    </div>
</div>

@section Scripts {


    <script>

        $(document).ready(function () {
            $(".sidebar-toggler").removeClass("hide");
            $(".page-sidebar-wrapper").remove();
            closeLeftSidebar();
        });

        var version = '@Html.Raw(ViewBag.Asembly)';


    </script>

}
