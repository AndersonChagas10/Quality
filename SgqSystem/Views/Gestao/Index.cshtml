        </div>

        <div id="linha">

            <div id="circulo4Action" class="circuloPDCA" onmouseover="setBgColor(this.id,'#7b8fa4', '#fff')" onmouseout="setBgColor(this.id,'#b4bcc5', '#333')" onclick="showHide(this.id,'fundoMenuSuperior');">

                Problemas Crônicos e Relatos de Anomalia

            </div>

            <div id="circulo2Do" class="circuloPDCA" onmouseover="setBgColor(this.id,'#2d5f0f', '#fff')" onmouseout="setBgColor(this.id,'#9fe598', '#333')" onclick="showHide(this.id,'fundoMenuSuperior');">

                Execução da Coleta de dados e Planos de Ação

            </div>

        </div>

        <div id="linha" class="centro">

            <div id="circulo3Check" class="circuloPDCA" onmouseover="setBgColor(this.id,'#cb5454', '#fff')" onmouseout="setBgColor(this.id,'#e59898', '#333')" onclick="showHide(this.id,'fundoMenuSuperior');">

                Avaliação de Resultados e Comunicacão dos Desvios

            </div>

        </div>

        <div id="fundoMenuSuperior">



            <div class="corpoMenuCampos">

                <div id="menu1Plan" class="menuCampos">

                    <div class="botaoFecharMenu" onclick="showHide('fundoMenuSuperior', 'fundoMenuSuperior')">Voltar</div>

                    <ul id="nav">

                        <li><a href="#">Visão Geral da Área</a>

                        <li><a href="#">Plano de Ação</a></li>
                    </ul>

                </div>

                <div id="menu2Do" class="menuCampos">

                    <div class="interno">

                        <div class="botaoFecharMenu" onclick="showHide('fundoMenuSuperior', 'fundoMenuSuperior')">Voltar</div>

                        <ul id="nav">

                            <li>
                                <a href="#">Relatórios de coletas</a>
                                <ul>
                                    <li><a href="#">Paramentrizações</a></li>
                                    <li><a href="#">Utilização do SGQ</a></li>
                                    <li><a href="#">Apontamentos Diários</a></li>
                                    <li><a href="#">Verificação do tipificação</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>

                </div>

                <div id="menu3Check" class="menuCampos">

                    <div class="interno">

                        <div class="botaoFecharMenu" onclick="showHide('fundoMenuSuperior', 'fundoMenuSuperior')">Voltar</div>

                        <ul id="nav">
                            <li><a href="#">Reunião Diária</a></li>
                            <li><a href="#">Não Conformidades</a></li>
                            <li><a href="#">Cartas CEP</a></li>
                            <li><a href="@urlScorecard">Scorecard</a></li>
                            <li><a href="#">Evolutivo dos indicadores</a></li>
                        </ul>
                    </div>

                </div>

                <div id="menu4Action" class="menuCampos">

                    <div class="interno">

                        <div class="botaoFecharMenu" onclick="showHide('fundoMenuSuperior', 'fundoMenuSuperior')">Voltar</div>

                        <ul id="nav">
                            <li><a href="#">Reincidências</a></li>
                        </ul>
                    </div>

                </div>

            </div>

        </div>

    </div>

</div>

<script type="text/javascript">
		startList = function() {
		if (document.all&&document.getElementById) {
		navRoot = document.getElementById("menuDropDown");
		for (i=0; i<navRoot.childNodes.length; i++) {
		node = navRoot.childNodes[i];
		if (node.nodeName=="LI") {
		node.onmouseover=function() {
		this.className+=" over";
		  }
		  node.onmouseout=function() {
		  this.className=this.className.replace
			(" over", "");
		   }
		   }
		  }
		 }
		}
		window.onload=startList;
</script>

<script>

function setBgColor(id,color,font){

	document.getElementById(id).style.backgroundColor = color;
	document.getElementById(id).style.color = font;

}


function showHide(id, menu){


	if(document.getElementById(menu).style.display == 'none'){

		document.getElementById(menu).style.display = 'block';

		document.getElementById('circulo1Plan').style.display = 'none';
		document.getElementById('circulo2Do').style.display = 'none';
		document.getElementById('circulo3Check').style.display = 'none';
		document.getElementById('circulo4Action').style.display = 'none';

		document.getElementById('menu1Plan').style.display = 'none';
		document.getElementById('menu2Do').style.display = 'none';
		document.getElementById('menu3Check').style.display = 'none';
		document.getElementById('menu4Action').style.display = 'none';

		document.getElementById('divMenu').style.backgroundImage = 'none';


		var meuMenu = 'menu' + id.substring(7,20);


		document.getElementById(id).style.display = 'inline-block';
		document.getElementById(meuMenu).style.display = 'inline-block';

	}else{

		document.getElementById(menu).style.display = 'none';

		document.getElementById('circulo1Plan').style.display = 'inline-block';
		document.getElementById('circulo2Do').style.display = 'inline-block';
		document.getElementById('circulo3Check').style.display = 'inline-block';
		document.getElementById('circulo4Action').style.display = 'inline-block';

		document.getElementById('menu1Plan').style.display = 'none';
		document.getElementById('menu2Do').style.display = 'none';
		document.getElementById('menu3Check').style.display = 'none';
		document.getElementById('menu4Action').style.display = 'none';

		document.getElementById('divMenu').style.backgroundImage = "url('/Imagens/setas.png')";


	}

}

</script>
