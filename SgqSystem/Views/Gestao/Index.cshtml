    <div id="divMenu">

        <div class="fundoMenu">

            <div id="menu" class="menu">

            </div>

        </div>

        <div id="linha" class="centro">

            <div id="circulo1Plan" class="circuloPDCA" onmouseover="setBgColor(this.id,'#ddb708', '#fff')" onmouseout="setBgColor(this.id,'#e5e498', '#333')" onclick="showHide(this.id,'fundoMenuSuperior');">

                Planejamento

