}

<style>


    #divMenu {
        width: 450px;
        height: 450px;
        margin: auto;
        background-image: url('/Imagens/setas.png');
        background-repeat: no-repeat;
        background-position: center;
        background-size: 400px;
        font-family: 'Century Gothic';
        font-size: small;
    }

    #linha {
        position: relative;
        height: 150px;
        width: 450px;
    }

    .centro {
        text-align: center;
    }

    .circuloPDCA {
        border-radius: 50% !important; 
        display: inline-block;
        cursor: pointer;
        background-color: yellow;
        width: 150px;
        height: 150px !important;
        text-align: center;
        font-weight: bold;
        color: #333;
    }

    #circulo1Plan {
        background-color: #e5e498;
        padding-top: 60px;
        height: 90px;
    }

    #circulo2Do {
        background-color: #9fe598;
        float: right;
        padding-top: 50px;
        height: 100px;
    }

    #circulo3Check {
        background-color: #e59898;
        padding-top: 40px;
        height: 110px;
    }

    #circulo4Action {
        background-color: #b4bcc5;
        float: left;
        padding-top: 60px;
        height: 90px;
    }

    .fundoMenu {
        position: absolute;
        height: 450px;
        width: 450px;
    }

    #fundoMenuSuperior {
        position: absolute;
        top: 0px;
        height: 450px;
        width: 450px;
        display: none;
        z-index: 1;
    }

    .menu {
        position: relative;
        height: 290px;
        width: 290px;
        margin: auto;
        top: 85px;
        border-radius: 20%;
    }

    .corpoMenuCampos {
        position: relative;
        height: 220px;
        width: 220px;
        margin-right: auto;
        margin-left: auto;
        top: 130px;
    }

    .menuCampos {
        position: relative;
        height: 220px;
        width: 220px;
        display: table;
    }

    #menu1Plan {
        display: none;
        top: 60px;
        z-index: 10;
    }

    #menu2Do {
        display: none;
        right: 45px;
        z-index: 10;
    }

        #menu2Do .interno {
            position: absolute;
            top: 0;
            bottom: 0;
            left: -110px;
            right: 0;
            width: 50%;
            height: 50%;
            margin: auto;
        }

    #menu3Check {
        display: none;
        top: -40px;
        z-index: 10;
    }

        #menu3Check .interno {
            position: absolute;
            bottom: 0;
        }

    #menu4Action {
        display: none;
        left: 45px;
        z-index: 10;
    }

        #menu4Action .interno {
            position: absolute;
            top: 0;
            bottom: 0;
            left: -110px;
            right: 0;
            width: 50%;
            height: 50%;
            margin: auto;
        }


    .botaoFecharMenu {
        width: 220px;
        background-color: #410404;
        font-size: xx-small;
        color: #fff;
        text-align: center;
        cursor: pointer;
    }

    /*menu*/

    #divMenu ul {
        margin: 0;
        padding: 0;
        list-style: none;
        width: 220px;
        text-align: center;
    }

    #divMenu     ul li {
            position: relative;
        }

    #divMenu li ul {
        position: absolute;
        left: 220px;
        top: 0;
        display: none;
    }

    #divMenu ul li a {
        display: block;
        text-decoration: none;
        color: #000;
        background: #eee;
        padding: 5px;
        border-bottom: 1px solid #ccc;
    }

    /* Fix IE. Hide from IE Mac \*/
    * #divMenu html ul li {
        float: left;
    }

        * #divMenu html ul li a {
            height: 1%;
        }
    /* End */

    #divMenu li:hover ul {
        display: block;
    }

    #divMenu ul li a:hover {
        text-decoration: none;
        font-weight: bold;
        background: #ccc;
    }
</style>



