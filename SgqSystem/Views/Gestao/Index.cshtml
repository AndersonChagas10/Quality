<script type="text/javascript">
    startList = function () {
        if (document.all && document.getElementById) {
            navRoot = document.getElementById("menuDropDown");
            for (i = 0; i < navRoot.childNodes.length; i++) {
                node = navRoot.childNodes[i];
                if (node.nodeName == "LI") {
                    node.onmouseover = function () {
                        this.className += " over";
                    }
                    node.onmouseout = function () {
                        this.className = this.className.replace
                          (" over", "");
                    }
                }
            }
        }
    }
    window.onload = startList;
</script>

<script>

    function setBgColor(id, color, font) {

        document.getElementById(id).style.backgroundColor = color;
        document.getElementById(id).style.color = font;

    }


    function showHide(id, menu) {


        if (document.getElementById(menu).style.display == 'none') {

            document.getElementById(menu).style.display = 'block';

            document.getElementById('circulo1Plan').style.display = 'none';
            document.getElementById('circulo2Do').style.display = 'none';
            document.getElementById('circulo3Check').style.display = 'none';
            document.getElementById('circulo4Action').style.display = 'none';

            document.getElementById('menu1Plan').style.display = 'none';
            document.getElementById('menu2Do').style.display = 'none';
            document.getElementById('menu3Check').style.display = 'none';
            document.getElementById('menu4Action').style.display = 'none';

            document.getElementById('divMenu').style.backgroundImage = 'none';


            var meuMenu = 'menu' + id.substring(7, 20);


            document.getElementById(id).style.display = 'inline-block';
            document.getElementById(meuMenu).style.display = 'inline-block';

        } else {

            document.getElementById(menu).style.display = 'none';

            document.getElementById('circulo1Plan').style.display = 'inline-block';
            document.getElementById('circulo2Do').style.display = 'inline-block';
            document.getElementById('circulo3Check').style.display = 'inline-block';
            document.getElementById('circulo4Action').style.display = 'inline-block';

            document.getElementById('menu1Plan').style.display = 'none';
            document.getElementById('menu2Do').style.display = 'none';
            document.getElementById('menu3Check').style.display = 'none';
            document.getElementById('menu4Action').style.display = 'none';

            document.getElementById('divMenu').style.backgroundImage = "url('/Imagens/setas.png')";

        }

    }

</script>
